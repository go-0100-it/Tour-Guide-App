<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tour_guide_project6.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FestivalEventsActivity"
            android:label="@string/festival_events"/>
        <activity android:name=".GardensParksActivity"
            android:label="@string/gardens_parks"/>
        <activity android:name=".AmusementWaterParksActivity"
            android:label="@string/amusement_water_parks"/>
        <activity android:name=".LandmarksHistoricalSitesActivity"
            android:label="@string/landmarks_historical_sites"/>
        <activity android:name=".ArtScienceMuseumsActivity"
            android:label="@string/art_science_museums"></activity>
    </application>

</manifest>
